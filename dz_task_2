//2. Создайте структуру Point с полями x и y.
//- Создайте два объекта point1 и point2 структуры Point.
//- Присвойте значения point1 и point2.
//- Вычислите расстояние между двумя точками(используя формулу : sqrt((x2 - x1) ^ 2 + (y2 - y1) ^ 2)).

#include <iostream>
using namespace std;

struct Point
{
	float x;
	float y;
};

int main()
{
	Point point1;
	Point point2;

	point1.x = 0.0;
	point1.y = 0.0;

	point2.x = 3.0;
	point2.y = 4.0;

	cout << "Length: " << sqrt((point2.x - point1.x) * (point2.x - point1.x) + (point2.y - point1.y) * (point2.y - point1.y)) << endl;
	return 0;
}
